const express = require("express");
const router = express.Router();
const userInfoController = require("../controllers/userInfoController");

// Route to retrieve all user collections
router.get("/userInfo", userInfoController.getAllUsers);

// Route to retrieve a specific user collection by username
router.get("/userInfo/:username", userInfoController.getUserByUsername);

// Route to add a new user collection
router.post("/userInfo", userInfoController.addUser);

module.exports = router;
